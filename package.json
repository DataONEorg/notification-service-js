{
  "name": "dataone-notifications",
  "version": "0.0.1",
  "description": "A wrapper for the DataONE notification service API",
  "main": "./dist/dataone-notifications.mjs",
  "module": "./dist/dataone-notifications.mjs",
  "types": "./dist/dataone-notifications.d.ts",
  "exports": {
    ".": {
      "types": "./dist/dataone-notifications.d.ts",
      "import": "./dist/dataone-notifications.mjs",
      "default": "./dist/dataone-notifications.mjs"
    },
    "./bundle": {
      "default": "./dist/dataone-notifications.bundle.umd.js"
    }
  },
  "type": "module",
  "scripts": {
    "test": "vitest",
    "demo": "vite --config vite.demo.config.ts --mode demo --port 4173",
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:fix": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DataONEorg/notification-service-js.git"
  },
  "keywords": [
    "notifications",
    "dataone",
    "dataset",
    "data",
    "package",
    "events"
  ],
  "author": "Robyn Thiessen-Bock",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/DataONEorg/notification-service-js/issues"
  },
  "homepage": "https://github.com/DataONEorg/notification-service-js#readme",
  "dependencies": {
    "ky": "^1.11.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  }
}
